<ol class="items-list">
	<li class="item flexrow items-header">
		<div class="item-name">Equipamento</div>
		<!-- <div class="item-formula">{{set.attr}}</div> -->
		<div class="item-controls">
			<a class="item-control item-create" title="Create item" data-type="item"><i class="fas fa-plus"></i></a>
		</div>
	</li>
	<ol class="item-list">
		{{#each itens as |item id|}}
			<li class="item item-detail flexrow {{#if item.isExpanded}}expanded{{/if}}" data-item-id="{{item._id}}">
				<div class="item-name flexrow rollable">
					<div
						class="item-image"
						tabindex="0"
						role="button"
						aria-label="{{item.name}}"
						style="background-image: url('{{item.img}}')"
					></div>
					<h4>{{item.name}}</h4>
				</div>
				<div class="item-controls">
					<a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
					<a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
				</div>
				{{#if item.isExpanded}}
					{{> "tresdetv.item-summary" (lookup @root.expandedData item._id)}}
				{{/if}}
			</li>
		{{/each}}
	</ol>
</ol>